<section class="module user-page-module">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-md-offset-3">
        <%= link_to "Start a new project!", '/projects/new', class: 'btn btn-g btn-round btn-lg btn-block', id: 'start-new-button' %>
      </div>
    </div>



    <% if current_user && current_user.primary_instrument && !@personalized_projects.empty? %>
      <% @project_iterator_count = 0 %>
        <div class="row">
          <div class="col-sm-12">
            <h2 class="font-alt">Projects Looking For <%= current_user.primary_instrument %> Tracks</h2>
            <hr class="divider-w mt-10 mb-20">
            </div>
          </div>
            <% @personalized_projects.each do |project| %>
              <% if @project_iterator_count == 0 %>
                <div class="row">
              <% end %>
                  <div class="col-sm-6">
                    <div class="post">
                      <div class="post-header font-alt">
                        <h3 class="post-title"> <%= link_to project.name, project %></h3>
                        <div class="post-meta">
                          By <a href="#"><%= project.user.name %></a> | <%= project.created_at.to_date %> | <%= 
                            if project.comments.count == 1
                              "#{project.comments.count} Comment" 
                            else
                              "#{project.comments.count} Comments" 
                            end
                              %> | <%= 
                            if project.tracks.count == 1
                              "#{project.tracks.count} Track" 
                            else
                              "#{project.tracks.count} Tracks" 
                            end
                               %>
                        </div>
                        </div>
                          <p><%= project.description %></p>
                    </div>
                  </div>
              <% @project_iterator_count += 1 %>
              <% if @project_iterator_count == 2 %>
                <% @project_iterator_count = 0  %>
                </div>
              <% end %>
            <% end %>

    <% end %>
    
    <% if !@open_projects.empty? %>
      <% @project_iterator_count = 0 %>
        <div class="row">
          <div class="col-sm-12">
            <h2 class="font-alt">Open Projects</h2>
            <hr class="divider-w mt-10 mb-20">
            </div>
          </div>
            <% @open_projects.each do |project| %>
              <% if @project_iterator_count == 0 %>
                <div class="row">
              <% end %>
                  <div class="col-sm-6">
                    <div class="post">
                      <div class="post-header font-alt">
                        <h3 class="post-title"> <%= link_to project.name, project %></h3>
                        <div class="post-meta">
                          By <a href="#"><%= project.user.name %></a> | <%= project.created_at.to_date %> | <%= 
                            if project.comments.count == 1
                              "#{project.comments.count} Comment" 
                            else
                              "#{project.comments.count} Comments" 
                            end
                              %> | <%= 
                            if project.tracks.count == 1
                              "#{project.tracks.count} Track" 
                            else
                              "#{project.tracks.count} Tracks" 
                            end
                               %>
                        </div>
                        </div>
                          <p><%= project.description %></p>
                    </div>
                  </div>
              <% @project_iterator_count += 1 %>
              <% if @project_iterator_count == 2 %>
                <% @project_iterator_count = 0  %>
                </div>
              <% end %>
            <% end %>
    <% end %>

    <% if !@completed_projects.empty? %>
      <% @project_iterator_count = 0 %>
        <div class="row">
          <div class="col-sm-12">
            <h2 class="font-alt">Completed Projects</h2>
            <hr class="divider-w mt-10 mb-20">
            </div>
          </div>
            <% @completed_projects.each do |project| %>
              <% if @project_iterator_count == 0 %>
                <div class="row">
              <% end %>
                  <div class="col-sm-6">
                    <div class="post">
                      <div class="post-header font-alt">
                        <h3 class="post-title"> <%= link_to project.name, project %></h3>
                        <div class="post-meta">
                          By <a href="#"><%= project.user.name %></a> | <%= project.created_at.to_date %> | <%= 
                            if project.comments.count == 1
                              "#{project.comments.count} Comment" 
                            else
                              "#{project.comments.count} Comments" 
                            end
                              %> | <%= 
                            if project.tracks.count == 1
                              "#{project.tracks.count} Track" 
                            else
                              "#{project.tracks.count} Tracks" 
                            end
                               %>
                        </div>
                        </div>
                          <p><%= project.description %></p>
                    </div>
                  </div>
              <% @project_iterator_count += 1 %>
              <% if @project_iterator_count == 2 %>
                <% @project_iterator_count = 0  %>
                </div>
              <% end %>
            <% end %>
    <% end %>

  </div>
</section>


