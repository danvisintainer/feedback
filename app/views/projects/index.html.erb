<h1>Community Projects</h1>

<% if current_user && current_user.primary_instrument %>
	<h2>Projects Looking For <%= current_user.primary_instrument %> Tracks</h2>

<% @personalized_projects.each do |project| %>
	<%= link_to project.name, project %><br>
	<% end %>

<% end %>

<h2>Completed Projects</h2>
<% @projects.each do |project| %>
	<% if project.completed == true %>
	<%= link_to project.name, project %><br>
	<% end %>
<% end %>


<h2>Open Projects</h2>
<% @projects.each do |project| %>
	<% if project.completed == false %>
	<%= link_to project.name, project %><br>
	<% end %>
<% end %>


