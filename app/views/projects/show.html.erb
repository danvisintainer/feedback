<%= include_gon %>

<div class="main">
	<section class="module-small bg-dark bg-dark-40" data-background="assets/images/section-8.jpg">
			<div class="container">

				<div class="row">

					<div class="col-sm-6 col-sm-offset-3">


						<h1 class="module-title font-alt"><%=@project.name  %></h1>
						<div class="module-subtitle font-serif mb-0"><%=@project.description %></div>
					</div>
				</div><!-- .row -->
				<div class="row">
				</div>
			</div>
		</section>
</div>

<center>					
<% if current_user && project_owner? %>
	<%= render 'options' %>
<% end %>
</center>

<div id="mic-visualizer">

</div>

<center>

<% if current_user %>
	<div id="controls">
	  <button id="recorderStart">Record</button>
	  <!-- <button id="recorderStop">Stop</button> -->
	</div>
<% end %>

<button id="playAll">Play All!</button>

</center>

<div id="all-tracks">

  <%= render partial: "tracks/track", collection: @tracks %>

</div>
<br>

<center>

<% if current_user && project_owner? %>
  <%= button_to "Delete this project", "/projects/#{@project.id}", method: 'delete', class: 'project-delete-btn', id: @project.id %>
<% end %>


<br>
<br>
<div id="comment-count">
<a href="javascript:void(0);"><%= "#{@project.comments.count} comments" %>
</a>
</div>

<% if current_user %>
	<%= form_for [@project, Comment.new], :remote => true do |f| %>
	  <div class="field">
	    <%= f.text_area :body, class: "form-control col-lg-8", placeholder: "Provide comment here." %>
	    <%= f.hidden_field :project_id, :value => @project.id %>
	    <%= f.hidden_field :user_id, :value => current_user.id %>
	  </div>
	  <div class="actions">
	    <%= f.submit "Leave Comment" %>
	  </div>
	<% end %>
	 </div>
<% end %>



 <!-- :remote => true -->
<br>
<div id="comments">
 <%= render @project.comments %>
</div>

<script>
	completedCheck();
</script>