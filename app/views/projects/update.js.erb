var completed = <%= @project.completed %>;
var $button = $("input.project-complete-btn");

if (completed){

  $("#recorderStart").hide();
  $("#instrument-need-checkbox").hide();
  $(".not-completed-guide").hide();
  $(".is-completed-guide").show();
  $button.val("Open project for collaboration");
  $button.siblings().last().val("false");
  $button.blur();
} else if (completed === false) {

  $("#recorderStart").show();
  $("#instrument-need-checkbox").show();
  $(".not-completed-guide").show();
  $(".is-completed-guide").hide();
  $button.val("Mark project completed");
  $button.siblings().last().val("true");
  $button.blur();
}