<div class="col-sm-6">
	<center>
		<h5 class="font-alt not-completed-guide">A completed project is locked,<br>and can no longer be edited by others.</h5>
		<h5 class="font-alt is-completed-guide">You marked this project as completed.<br>To allow collaboration again, click this button!</h5>
	<% if !@project.completed %>
		<!-- IF PROJECT IS NOT COMPLETED -->

		<%= button_to "Mark project completed", "/projects/#{@project.id}", method: 'patch', params: {completed: :true}, class: 'project-complete-btn btn btn-d btn-round btn-lg', id: @project.id, :form => { :id => "collab-btn" } %>


	<% else %>
		<!-- IF PROJECT IS COMPLETED -->

		<%= button_to "Open project for collaboration", "/projects/#{@project.id}", method: 'patch', params: {completed: :false}, class: 'project-complete-btn btn btn-d btn-round btn-lg', id: @project.id, :form => { :id => "collab-btn" } %>

	<% end %>

</div>

<div class="col-sm-6">
	<center>

	<h5 class="font-alt not-completed-guide">Invite others to collaborate!</h5>
	<h5 class="font-alt is-completed-guide">A project must be open for others to collaborate.</h5>
			
	<div id="instrument-need-checkbox">
	<p>I'm looking for...</p>
		<%= form_for @instrument_need, url: instrument_need_path, :method => :patch do |f| %>
		<%= f.label :guitar %>
		<%= f.check_box :guitar %>
		<%= f.label :bass %>
		<%= f.check_box :bass %>
		<%= f.label :drums %>
		<%= f.check_box :drums %>
		<%= f.label :keyboards %>
		<%= f.check_box :keyboards %>
		<%= f.hidden_field :project_id, :value => @project.id %>
		<%= f.submit "Invite", class: "btn btn-d btn-round btn-sm" %>
<% end %>


	</div>
			

</div>


