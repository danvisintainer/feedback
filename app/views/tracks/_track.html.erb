<div id="waveform-<%= track.id %>" audio-source="<%= track.audio.url %>">
  Uploaded by <%= track.user.name %>
  <br>
 <!--Displays avatar of the user who uploaded the track-->
<a href=<%= "#{user_path(track.user)}" %>><img src="<%= track.user.avatar_url %>"></a>

<% if current_user.nil? %>

<% elsif current_user.id == track.project.user.id || current_user.id == track.user.id%>
  <div align="right">
  <%= link_to content_tag(:i, nil, class: 'fa fa-trash'), "/tracks/#{track.id}", method: 'delete', class: 'track-delete-btn btn btn-border-d btn-round', id: track.id %>
  </div>
<% end %>

</div>