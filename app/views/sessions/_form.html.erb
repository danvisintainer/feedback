<%= form_tag '/login' do %>

  <!-- <input class="form-control input-lg" type="text" placeholder="Large input"> -->
  <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'Email' %><br>
  <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'password' %><br>
  <%= submit_tag "Log In", class: "btn btn-g btn-round btn-block"%> <br>


<% end %>

<p><%= flash[:notice] %></p>